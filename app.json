{
    "name": "IS ATM",
    "description": "Interaction Studio ATM Machine example",
    "keywords": [
      "Interaction Studio",
      "Marketing Cloud",
      "Demo"
    ],
    "website": "https://salesforce.com",
    "repository": "https://github.com/jeremywrags/ATM.git",
    "logo": "https://aloha.force.com/img/logo198.png",        
    "env": {
      "ClientID": {
        "description": "This is your Markeitng Cloud Client ID from the Admin section"        
      },
      "ClientSeceret": {
        "description": "This is your Markeitng Cloud Client Seceret from the Admin section"      
      }
    },
    "addons": [
      "openredis",
      {
        "plan": "mongolab:shared-single-small",
        "as": "MONGO"
      },
      {
        "plan": "heroku-postgresql",
        "options": {
          "version": "9.5"
        }
      }
    ],
    "buildpacks": [
      {
        "url": "https://github.com/stomita/heroku-buildpack-phantomjs"
      }
    ],
    "environments": {
      "test": {
        "scripts": {
          "test": "bundle exec rake test"
        }
      }
    }
  }